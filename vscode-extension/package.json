{
  "name": "vscode-opusflow",
  "displayName": "OpusFlow",
  "description": "VSCode extension for OpusFlow - Spec-Driven Development with AI agents",
  "version": "0.5.0",
  "publisher": "opusflow",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "opusflow",
    "ai-agent",
    "planning",
    "workflow",
    "sdd",
    "spec-driven",
    "cursor",
    "claude",
    "aider"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tuanpep/opusflow"
  },
  "activationEvents": [
    "workspaceContains:**/opusflow-planning/**"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opusflow.createPlan",
        "title": "OpusFlow: Create Plan",
        "icon": "$(new-file)"
      },
      {
        "command": "opusflow.verifyPlan",
        "title": "OpusFlow: Verify Plan",
        "icon": "$(check)"
      },
      {
        "command": "opusflow.executeWorkflow",
        "title": "OpusFlow: Execute Workflow",
        "icon": "$(play)"
      },
      {
        "command": "opusflow.openWorkflow",
        "title": "OpusFlow: Open Workflow Panel",
        "icon": "$(dashboard)"
      },
      {
        "command": "opusflow.selectAgent",
        "title": "OpusFlow: Select AI Agent"
      },
      {
        "command": "opusflow.authenticateAgent",
        "title": "OpusFlow: Authenticate Agent"
      },
      {
        "command": "opusflow.copyVerificationPrompt",
        "title": "OpusFlow: Copy Verification Prompt"
      },
      {
        "command": "opusflow.generateMap",
        "title": "OpusFlow: Generate Codebase Map",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "opusflow.createSpec",
        "title": "OpusFlow: Create Specification",
        "icon": "$(file-text)"
      },
      {
        "command": "opusflow.decomposePlan",
        "title": "OpusFlow: Decompose Plan into Tasks",
        "icon": "$(list-tree)"
      },
      {
        "command": "opusflow.nextTask",
        "title": "OpusFlow: Get Next Task",
        "icon": "$(arrow-right)"
      },
      {
        "command": "opusflow.completeTask",
        "title": "OpusFlow: Mark Task Complete",
        "icon": "$(check-all)"
      },
      {
        "command": "opusflow.execTask",
        "title": "OpusFlow: Execute Task with Agent",
        "icon": "$(run)"
      },
      {
        "command": "opusflow.workflowStatus",
        "title": "OpusFlow: Show Workflow Status",
        "icon": "$(info)"
      },
      {
        "command": "opusflow.workflowStart",
        "title": "OpusFlow: Start New Workflow",
        "icon": "$(rocket)"
      },
      {
        "command": "opusflow.workflowNext",
        "title": "OpusFlow: Next Step Guidance",
        "icon": "$(lightbulb)"
      },
      {
        "command": "opusflow.setupApiKeys",
        "title": "OpusFlow: Setup API Keys",
        "icon": "$(key)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opusflow",
          "title": "OpusFlow",
          "icon": "resources/opusflow-icon.svg"
        }
      ]
    },
    "views": {
      "opusflow": [
        {
          "type": "webview",
          "id": "opusflowChat",
          "name": "Workflow Hub",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "opusflowExplorer",
          "name": "Specs, Plans & Tasks",
          "icon": "resources/opusflow-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "OpusFlow",
      "properties": {
        "opusflow.cliPath": {
          "type": "string",
          "default": "opusflow",
          "description": "Path to OpusFlow CLI executable"
        },
        "opusflow.defaultAgent": {
          "type": "string",
          "enum": [
            "aider",
            "claude-code",
            "prompt"
          ],
          "default": "prompt",
          "description": "Default AI agent for task execution"
        },
        "opusflow.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh UI when files change"
        },
        "opusflow.apiKeys.anthropic": {
          "type": "string",
          "default": "",
          "markdownDescription": "Anthropic API key for **Aider** and **Claude Code**. Get yours at [console.anthropic.com](https://console.anthropic.com/)"
        },
        "opusflow.apiKeys.openai": {
          "type": "string",
          "default": "",
          "markdownDescription": "OpenAI API key for **Aider** with GPT models. Get yours at [platform.openai.com](https://platform.openai.com/api-keys)"
        },
        "opusflow.apiKeys.gemini": {
          "type": "string",
          "default": "",
          "markdownDescription": "Gemini API key for **Gemini CLI**. Get yours at [aistudio.google.com](https://aistudio.google.com/)"
        }
      }
    },
    "menus": {
      "view/item/context": [
        {
          "command": "opusflow.createPlan",
          "when": "view == opusflowExplorer && viewItem == category",
          "group": "inline"
        },
        {
          "command": "opusflow.createSpec",
          "when": "view == opusflowExplorer && viewItem == category",
          "group": "inline"
        },
        {
          "command": "opusflow.verifyPlan",
          "when": "view == opusflowExplorer && viewItem == plan",
          "group": "inline"
        },
        {
          "command": "opusflow.decomposePlan",
          "when": "view == opusflowExplorer && viewItem == plan",
          "group": "inline"
        },
        {
          "command": "opusflow.executeWorkflow",
          "when": "view == opusflowExplorer && viewItem == plan",
          "group": "navigation"
        },
        {
          "command": "opusflow.copyVerificationPrompt",
          "when": "view == opusflowExplorer && viewItem == plan",
          "group": "inline"
        },
        {
          "command": "opusflow.nextTask",
          "when": "view == opusflowExplorer && viewItem == taskQueue",
          "group": "inline"
        },
        {
          "command": "opusflow.completeTask",
          "when": "view == opusflowExplorer && viewItem == task",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha -r ts-node/register 'src/test/**/*.test.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "chai": "^4.5.0",
    "eslint": "^9.39.2",
    "mocha": "^10.8.2",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "@vscode-elements/elements": "^2.3.1",
    "chokidar": "^5.0.0",
    "marked": "^17.0.1"
  }
}